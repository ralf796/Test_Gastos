@using Layers;
@model List<Fondo_Monetario_BE>

<div class="input-group bg-oriflame-gray rounded-pill p-0">
    <button class="btn btn-primary" onclick="ShowModalNuevo()"><i class="fad fa-search-plus me-2"></i> Nuevo</button>
</div>
<table class="table table-bordered table-striped table-hover table-sm w-100" id="tblDataTable">
    <thead>
        <tr>
            <th class="align-middle text-center"></th>
            <th class="align-middle text-center">DESCRIPCIÓN</th>
            <th class="align-middle text-center">TIPO FONDO</th>
            <th class="align-middle text-center">USUARIO</th>
            <th class="align-middle text-center">SALDO</th>
            <th class="align-middle text-center">ESTADO</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in Model)
        {
            <tr>
                <td class="align-middle text-center">
                    <i class="fas fa-edit text-primary h5 me-2 hvr-grow" title="Editar" onclick="ShowModalModificar('@row.id_fondo','@row.descripcion','@row.id_tipo_fondo','@row.saldo.ToString("N2")')"></i>
                    <i class="fas fa-times text-danger h5 hvr-grow" title="Eliminar" onclick="Eliminar('@row.id_fondo','@row.descripcion')"></i>
                </td>
                <td class="align-middle">@row.descripcion</td>
                <td class="align-middle text-center">@row.tipo_fondo</td>
                <td class="align-middle text-center">@row.usuario</td>
                <td class="align-middle text-end pe-2">@row.saldo.ToString("N2")</td>
                <td class="align-middle text-center">
                    @if (row.estado == 1)
                    {
                        <i class="fas fa-check-circle text-success"></i>
                    }
                    else
                    {
                        <i class="fas fa-times-circle text-danger"></i>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>